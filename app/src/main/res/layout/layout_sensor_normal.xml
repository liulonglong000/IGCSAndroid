<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:background="@drawable/sensor_normal_bg">

    <ImageView
        android:id="@+id/iv_type"
        android:layout_width="28dp"
        android:layout_height="42dp"
        android:layout_marginLeft="2dp"
        android:scaleType="centerInside"
        android:contentDescription="" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="85dp"
            android:layout_height="30dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_sensor_value"
                android:layout_width="58dp"
                android:layout_height="match_parent"
                android:paddingTop="4dp"
                android:textSize="16sp"
                android:textColor="@color/gh_font_green"
                android:gravity="center_vertical"
                android:textAlignment="center"/>
            <TextView
                android:id="@+id/tv_sensor_unit"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:paddingTop="4dp"
                android:textSize="12sp"
                android:textColor="@color/gh_font_lightgray"
                android:gravity="center_vertical"
                android:textAlignment="center"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_sensor_name"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:paddingBottom="4dp"
            android:textSize="14sp"
            android:textColor="@color/gh_font_lightgray"
            android:gravity="center"
            android:textAlignment="center"/>

    </LinearLayout>
</LinearLayout>
