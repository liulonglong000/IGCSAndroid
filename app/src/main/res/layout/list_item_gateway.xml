<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="10dp"
    android:paddingRight="0dp"
    android:paddingTop="5dp"
    android:paddingBottom="10dp" >

    <com.loopj.android.image.SmartImageView
        android:id="@+id/gh_pic"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:contentDescription=""
        android:padding="1dp"
        android:scaleType="centerInside"
        android:background="@drawable/shape_gray_square_bg" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_account"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:gravity="center_vertical"
            android:textColor="@color/gh_font_lightgray"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/tv_info"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:gravity="center_vertical"
            android:textSize="14sp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_connect_status"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/tv_connect_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textSize="14sp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <include
            layout="@layout/layout_imageview_more" />
    </LinearLayout>



</LinearLayout>