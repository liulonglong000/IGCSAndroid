<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MonitorNodeActivity">

    <include
        android:id="@+id/frame_content"
        layout="@layout/layout_framelayout" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:background="@color/menu_bg"
        android:gravity="center"
        android:orientation="horizontal"
        android:baselineAligned="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/menu_monitor"
            android:layout_width="0dp"
            android:layout_height="47dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/menu_monitor_iv"
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:src="@drawable/menu_monitor_enable" />

            <TextView
                android:id="@+id/menu_monitor_tv"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_marginBottom="1dp"
                android:layout_marginTop="1dp"
                android:text="环境监测"
                android:textColor="@color/light_green"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/menu_control"
            android:layout_width="0dp"
            android:layout_height="47dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/menu_control_iv"
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:src="@drawable/menu_control_disable" />

            <TextView
                android:id="@+id/menu_control_tv"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_marginBottom="1dp"
                android:layout_marginTop="1dp"
                android:text="手动控制"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/menu_setting"
            android:layout_width="0dp"
            android:layout_height="47dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/menu_setting_iv"
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:src="@drawable/ic_autoctrl_disable" />

            <TextView
                android:id="@+id/menu_setting_tv"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_marginBottom="1dp"
                android:layout_marginTop="1dp"
                android:text="智能设置"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/menu_history"
            android:layout_width="0dp"
            android:layout_height="47dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/menu_history_iv"
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:src="@drawable/ic_history_disable" />

            <TextView
                android:id="@+id/menu_history_tv"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_marginBottom="1dp"
                android:layout_marginTop="1dp"
                android:text="历史数据"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>